<div class="container">

    <div class="row">
        <div class="col-md-12 text-center">
            <img src="/assets/img/burger.jpg" alt="burger">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>

    <div class="col-md-5">
        <div class="panel-panel default">
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li class="list-group-item">
                            <h3>{{this.burger_name}}</h3>
                            <form action="/{{this.id}}?_method=POST">
                                <input type="hidden" name="devoured" value="true">
                                <button class="btn btn-default btn-lg" value="submit">Devour It!</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-5">
        <div class="panel-panel default">
            <ul class="list-group">
                <li class="list-group-item">
        
                </li>
            </ul>
        </div>
    </div>

    <div class="col-md-12 text-center">
        <h4>Enter the name of the burger you want to eat and click ADD BURGER</h4>
        <form class="create-update-form" action="burgers/create" method="POST">
            <div class="form-group">
                <textarea class="form-control input-lg" type="text" name="burgerName"></textarea>
            </div>
            <button class="btn btn-default btn-lg" type="submit">ADD BURGER</button>
        </form>
    </div>

</div>