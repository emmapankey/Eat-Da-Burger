<div class="container">

    <div class="row" id="topRow">
        <div class="col-md-12 text-center">
            <img src="/assets/img/burger.jpg" alt="burger" class="burgerImg">
            <p class="pageTitle">Eat-Da-Burger!</p>
        </div>
    </div>

    <div class="col-md-5">
        <div class="panel-panel default">
            <h2 class="panelHeaders">Uneaten</h2>
            <ul class="list-group">
                {{#each burgers}} {{#unless this.devoured}}
                <li class="list-group-item">
                    <h3 class="burgerNameHeader">{{this.burger_name}}</h3>
                    <form class="change-devoured-form" data-id="{{id}}">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn btn-default btn-lg" id="devourSubmitButton" value="submit">Devour It!</button>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-5">
        <div class="panel-panel default">
            <h2 class="panelHeaders">Devoured</h2>
            <ul class="list-group">
                {{#each burgers}} {{#if this.devoured}}
                <li class="list-group-item">
                    <h3 class="burgerNameHeader">{{this.burger_name}}</h3>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-md-12 text-center">
        <form class="create-form">
            <div class="form-group">
                <label for="burgerInput" class="burgerInputLabel">To add a burger enter the name of the burger you want to eat.</label>
                <input type="text" class="form-control" id="burgerInput">
            </div>
            <button class="btn btn-default btn-lg" id="submit-burger" type="submit">SUBMIT</button>
        </form>
    </div>

</div>