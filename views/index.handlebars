<div class="container">

    <div class="row">
        <div class="col-md-12 text-center">
            <img src="/assets/img/burger.jpg" alt="burger">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>

    <div class="col-md-5">
        <div class="panel-panel default">
            <h3>Uneaten Burgers</h3>
            <ul class="list-group">
                {{#each burgers}} {{#unless this.devoured}}
                <li class="list-group-item">
                    <h3>{{this.burger_name}}</h3>
                    <form class="change-devoured-form" data-id="{{id}}">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn btn-default btn-lg" value="submit">Devour It!</button>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-5">
        <div class="panel-panel default">
            <h3>Eaten Burgers</h3>
            <ul class="list-group">
                {{#each burgers}} {{#if this.devoured}}
                <li class="list-group-item">
                    <h3>{{this.burger_name}}</h3>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>

